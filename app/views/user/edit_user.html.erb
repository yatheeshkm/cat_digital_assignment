 <div class="container">
 <div class="row mt-4 ">
  <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type%> alert-dismissible fade show col-md-6 mt-3" role="alert">
           <img src onerror='myfn()'>
    <button type="button" id="notice" class="btn-close" data-bs-dismiss="alert"></button>
    <strong></strong> <%= message %>
  </div>
      <% end %>
       <div class="row">
    <h1>A Cat Digital Assignment</h1> 
    <h3> User edit </h3>
      <div class="col-md-6">
        <div class="form-group">
          <%= form_with(url: "/update_user", method: "put") do |u| %>
            <input type="text" name="id" class="form-control form-control-alternative" id="exampleFormControlInput1"value="<%= @user.id%>" hidden>
            <input type="text" name="name" class="form-control form-control-alternative" id="exampleFormControlInput1"value="<%= @user.name%>">
          </div>
          <div class="form-group">
            <input type="email" name="email" class="form-control form-control-alternative" id="exampleFormControlInput1"
             value="<%= @user.email%>">
          </div>

           <div class="form-group">
            <input type="text" name="address" class="form-control form-control-alternative" id="exampleFormControlInput1"
             value="<%= @user.address%>">
          </div>
         
        </div>
        <div class="col-md-4 text-right">
          <div class="form-group">
            <%= u.submit "Update", class: "btn btn-primary",style: "width: 80px;" %>
          </div>
          <div class=" mt-2 form-group">
            <%= link_to 'Back',@user, class: "btn btn-outline-danger"%>
          </div>
        </div>
      <% end%>
    </div>
    </div>