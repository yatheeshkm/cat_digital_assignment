 <div class="container">
    <div class= "row">
      <h1 class="ml-1 mt-3 col-md-4">  </h1>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-warning alert-dismissible fade show col-md-6 ml-1 mt-3 float-right"  role="alert">
          <img src onerror='myfn()'>
          <span class="alert-icon"><i class="fas fa-thumbs-down"></i></span>
          <span class="alert-text"><strong>Warning!</strong> <%= message %> </span>
          <button type="button" class="close" id="notice" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
       <h1>A Cat Digital Assignment</h1> 
    <h3> User Create </h3>
    </div>
    <div class="row mt-4">
      <div class="col-md-12">
        <%= form_with(url: "/create_user", method: "post") do |u| %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= u.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-control form-control-alternative",required: true %>
              </div>
              <div class="form-group">
                <%= u.email_field :email, autocomplete: "email", placeholder: "name@mail.com", class: "form-control form-control-alternative", required: true %>
              </div>
              <div class="form-group">
                <%= u.text_field :address, autocomplete: "address", class: "form-control form-control-alternative", required: true, placeholder: "address" %>
              </div>
             
            </div>
            <div class="col-md-4 text-right">
              <div class="form-group">
                <%= u.submit "Create", class: "btn btn-primary" %>
              </div>
              <div class="mt-2 form-group">
                 <%= link_to 'Back',user_path, class: "btn btn-outline-danger"%>
              </div>
            </div>
          </div>
        </div>
      <% end%>
    </div>
  </div>